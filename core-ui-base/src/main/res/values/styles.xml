<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="InputStyleDefault">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/appTextColor</item>
    <item name="android:textColorHint">@color/appGrey</item>
  </style>

  <style name="TextInputLayoutOutlineBoxDefaultDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="android:textColorHint">@color/appGrey</item>
    <item name="hintTextColor">@color/appGrey</item>
    <item name="endIconMode">clear_text</item>
    <item name="boxBackgroundMode">outline</item>
    <item name="endIconTint">@color/appGrey</item>
  </style>

  <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
    <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
    <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
  </style>

  <style name="AlertButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/appBlue</item>
    <item name="backgroundTint">@color/white</item>
    <item name="rippleColor">@color/semiTransparent</item>
  </style>
</resources>